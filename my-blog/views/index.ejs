<!-- views/index.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title>My Blog</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <h1>Welcome to My Blog</h1>

  <a href="/posts/new">Create a New Post</a>

  <ul>
    <% posts.forEach(post => { %>
      <li>
        <a href="/posts/<%= post._id %>"><%= post.title %></a>
        <p>By <%= post.author || "Anonymous" %></p>
        <p><%= post.createdAt.toDateString() %></p>
      </li>
    <% }) %>
  </ul>
</body>
</html>
